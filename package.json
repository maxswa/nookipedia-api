{
  "name": "nookipedia-api",
  "version": "0.1.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "ISC",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxswa/nookipedia-api.git"
  },
  "bugs": {
    "url": "https://github.com/maxswa/nookipedia-api/issues"
  },
  "homepage": "https://github.com/maxswa/nookipedia-api/tree/1.0.0#readme",
  "keywords": [
    "acnh",
    "animal",
    "crossing",
    "new",
    "horizons",
    "nookipedia",
    "api"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "author": "maxswa",
  "scripts": {
    "build": "tsc",
    "generateTypes": "npx openapi-typescript nookipedia-api.yaml --output src/types.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix \"src/**/*.ts\"",
    "test": "jest",
    "prepublish": "yarn run build",
    "release": "np"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "prettier"
    ],
    "ignorePatterns": [
      "**/@types/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "np": "^7.6.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
